template(name='updateProfile')
    .row
        .twelve.columns
            .profile
                +avatar user=currentUser size='extra-large' shape='circle' class='avatar-center'
                h1.text-center.username #{currentUser.username}
                // #socialMediaAccounts
                    .ui.header Self Tags
        div
            each selftags
                .ui.basic.button.remove_self_tag
                    |#{this}
                    i.remove.icon
            .ui.icon.input
                input#add_self_tag(type='text' autofocus='' placeholder='Tag yourself...')
                i.plus.icon
        .ui.header Top Matched People
        div
            each matchedUsersList
                .item
                    strong #{this.matchedUser} (#{this.length}):
                    each this.tagIntersection
                        | #{this} &nbsp;
