template(name='docs')
    h1.ui.center.aligned.header #{filter} Posts
        #add_doc.ui.compact.basic.button
            i.green.plus.icon
            |Add doc
    .ui.container
        each docs
            +view_doc


template(name='view_doc')
    .ui.segment
        .ui.header #{title}
        .description #{description}
        .location #{location}
        .tags 
            each tags
                .ui.label #{this}
        .meta #{field}
        .meta #{applicant_inclusion}
        if is_author
            .edit_doc.ui.basic.button
                i.pencil.icon
                |Edit
        +comments
        
template(name='insta_doc')
    .ui.card
        .content
            .right.floated.meta #{when}
            img.ui.avatar.image(src='/images/avatar/large/#{author.avatar}')
            +avatar user=author shape="circle" size="extra-small" 
            |  #{author.username}
        .image
            img(src= image_url)
        .content
            span.right.floated
                i.heart.outline.like.icon
                |       #{like_count} likes
            i.comment.icon
            |     #{comment_count} comments
        .extra.content
            .ui.large.transparent.left.icon.input
                // hook up to profile page favorites
                i.heart.outline.icon
                // input(type='text', placeholder='Add Comment...')
            +comments