template(name='nav')
    .ui.fixed.menu.grid
        .computer.only.row
            a#home_link.item
                // img.logo(src='/img/ship_wheel-48.png', alt='HubCollider Logo')
                i.asterisk.icon
                | Collider
            .item
                .ui.transparent.icon.input
                    input.search(type='text', placeholder='Search...')
                    i.search.link.icon
            .right.menu
                if currentUser
                    a#view_me.item(class=view_me_class)
                        i.user.icon
                        | Me
                    a#create_doc.item
                        i.plus.icon
                        |Add
                a.item.sign-out(data-id='sign-out')
                    i.sign.out.icon
                    |Logout #{currentUser.username}
        .mobile.only.row
            .ui.simple.dropdown.item
                i.content.icon
                | Menu
                .menu
                    a#home_link.item
                        // img.logo(src='/img/ship_wheel-48.png', alt='HubCollider Logo')
                        i.asterisk.link.icon
                        | Home
                    if currentUser
                        a#view_me.item(class=view_me_class)
                            i.user.icon
                            | Profile
                        a#create_doc.item
                            i.plus.icon
                            | Create Post
                    a.item.sign-out(data-id='sign-out')
                        i.sign.out.icon
                        | Sign Out
                    .item
                        .ui.transparent.icon.input
                            input.search(type='text', placeholder='Search...')
                            i.search.link.icon
        .tablet.only.row
            a#home_link.item
                // img.logo(src='/img/ship_wheel-48.png', alt='HubCollider Logo')
                i.asterisk.icon
            .item
                .ui.transparent.icon.small.input
                    input.search(type='text', placeholder='Search...')
                    i.search.link.icon
            if currentUser
                a#view_me.item(class=view_me_class)
                    i.user.icon
                a#create_doc.item
                    i.plus.icon
            a.item.sign-out(data-id='sign-out')
                i.sign.out.icon



