template(name='nav')
    .ui.stackable.menu
        a#leftMenu.icon.item
            i.content.icon
        a.item(href='/')
            img.logo(src='/img/ship_wheel-48.png', alt='HubCollider Logo')
            span Hub
                strong Collider
        .item
            .ui.transparent.icon.input
                input#search(type='text', placeholder='Search...')
                i.search.link.icon
        .right.menu
            if currentUser
                a#add_doc.item
                    i.plus.icon
                    | Add
                a.item(href="{{pathFor 'updateProfile'}}" class="{{activeIfRouteNameIs 'updateProfile'}}")
                    |  Profile
                a.item.sign-out(data-id='sign-out')
                    i.sign.out.icon
                    |Logout #{currentUser.username}
            a#rightMenu.icon.item
                i.alarm.outline.icon
