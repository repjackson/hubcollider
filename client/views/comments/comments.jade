template(name='comments')
    .ui.comments
        h3.ui.dividing.header #{comment_count} Comments
        each comments
            +comment
        .ui.input
            input.new_comment(type='text' placeholder='Comment')


template(name='comment')            
    .comment
        // a.avatar
        //     img(src='/images/avatar/small/matt.jpg')
        //     +avatar user=author shape="circle" size="extra-small" 
        .content
            a.author #{author.username}
            .metadata
                span.date #{when}
            .text #{text}
            .actions
                // a.reply Reply
                if is_author
                    i.large.link.remove.icon.delete_comment
                else
                    i.blue.large.link.thumbs.up.icon.like_comment