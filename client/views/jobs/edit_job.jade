template(name='edit_job')
    with job
        .ui.segment
            .ui.form
                .required.field
                    label Title
                    input#title(type='text' name='title' placeholder='Title' value=title)
                .inline.field
                    label Type of Job
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='contract')) Contract
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='freelance')) Freelance
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='part-time')) Part-time
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='full-time')) Full-time
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='internship')) Internship
                .field
                    label Description
                    textarea#description(rows='5') #{description}
                .inline.field
                    label Location
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='remote')) Remote
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='flexible')) Flexible
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='on site')) On Site

                .inline.field
                    label Field of Work
                    +inputAutocomplete settings=settings id="add_field_of_work_tag" class="" autocomplete="off" placeholder='Select/Type Type'
                
                .inline.field
                    label Extras required?
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='quote')) Quote
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='estimated timeline')) Estimated timeline
                    .ui.button.tag_suggestion(class=tag_suggestion_class(val='relevant experience')) Relevant experience
                .field
                    .ui.header Tags
                    each tags
                        .ui.basic.button.job_tag
                            i.minus.icon
                            |#{this}
                    .ui.left.icon.input
                        i.add.icon
                        input#add_job_tag(type='text' autofocus='' placeholder='Add Tag' maxlength='50')
                if tags
                    #save_job.ui.animated.large.green.button
                        .visible.content Save
                        .hidden.content
                            i.right.check.icon
                #delete_job.ui.animated.red.large.button
                        .hidden.content 
                            i.remove.icon
                        .visible.content Delete
