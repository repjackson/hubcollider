  |     {{/if}}
  |   {{/with}}
template(name='addJob')
  button.allJobsButton All Jobs
  form(data-id='addJob-form')
    textarea.u-full-width.addJob-single-line(rows='1', placeholder='Title', data-id='addJob-title')
    textarea.u-full-width.addJob-single-line(rows='1', placeholder='Location', data-id='addJob-location')
    select.addJob-single-line(data-id='addJob-schedule')
      option(value='Part Time') Part Time
      option(value='Full Time') Full Time
      option(value='Contract') Contract
      option(value='Other') Other
    textarea.u-full-width.addJob-multi-line(rows='1', placeholder='Description', data-id='addJob-description')
    textarea.u-full-width.addJob-multi-line(rows='1', placeholder='Responsibilities', data-id='addJob-responsibilities')
    textarea.u-full-width.addJob-multi-line(rows='1', placeholder='Qualifications', data-id='addJob-qualifications')
    input.button-primary.u-pull-right(type='submit', data-id='addJob-submit', value='Post')
