template(name='jobBoard')
  | {{#if showAllJobs}}
  .row
    .twelve.columns
      button#postJobButton.button-primary Post Job
      form(data-id='search-jobs-form')
        input.u-full-width(type='text', placeholder='Search jobs...', data-id='search-jobs-query')
  .row
    .twelve.columns
      | {{#each jobs}}
      .small-profile(id='{{_id}}')
        b {{title}}
        br
        #{location}
        br
        |             {{formatDate createdOn}}
        |             {{#if isAuthor author}}
        button.u-pull-right.no-button(data-id='remove-job')
          i.fa.fa-trash
        button.u-pull-right.no-button(data-id='edit-job')
          i.fa.fa-pencil
        |             {{/if}}
      |         {{/each}}
      |         {{#if Template.subscriptionsReady}}
      |           {{#unless instance.jobsCount.get}}
      .alert.info There are no matching jobs to display
      |           {{/unless}}
      |           {{#if hasMoreJobs}}
      button.u-full-width(data-id='load-more') Load more
      |           {{/if}}
      |         {{else}}
      .text-center Loading jobs...
      |         {{/if}}
  |   {{else}}
  |     {{#if showSingleJob}}
  |       {{> singleJob}}
  |     {{else}}
  |       {{> addJob}}
  |     {{/if}}
  |   {{/if}}
