template(name='edit_event')
    with event
        .ui.segment
            .ui.form
                .required.field
                    label Title
                    input#title(type='text' name='title' placeholder='Title' value=title)
                .inline.field
                    label Type of event
                    .ui
                        #accounting_finance.ui.button.type_button(class=type_button_class(type='accounting_finance')) Accounting/Finance
                        #fundraising_crowdfunding.ui.button.type_button(class=type_button_class(type='fundraising_crowdfunding')) Fundraising/Crowdfunding
                        #advertising_pr.ui.button.type_button(class=type_button_class(type='advertising pr')) Advertising PR
                        #meetups_panels.ui.button.type_button(class=type_button_class(type='meetups panels')) Meetups/Panels
                        #leadership_professional_development.ui.button.type_button(class=type_button_class(type='leadership professional_development')) Leadership/Professional Development
                        #startups_demos.ui.button.type_button(class=type_button_class(type='startups_demos')) Startups/Demos
                        #product_promotions.ui.button.type_button(class=type_button_class(type='product_promotions')) Product Promotions
                        #health_wellness.ui.button.type_button(class=type_button_class(type='health_wellness')) Health/Wellness
                        #online_marketing_seo.ui.button.type_button(class=type_button_class(type='online_marketing_seo')) Online Marketing/SEO
                        #happy_hours.ui.button.type_button(class=type_button_class(type='happy_hours')) Happy Hours
                        #community_event.ui.button.type_button(class=type_button_class(type='community_event')) Community Event
                        #other.ui.button.type_button(class=type_button_class(type='other')) Other
                        
                .field
                    label Date
                    input#datetimepicker(type='text')
                .field
                    label Description
                    textarea#description(rows='5')
                .inline.field
                    label Location
                    .ui.basic.buttons
                        #anywhere.ui.button(class=location_button_class) Work from anywhere
                        #locally.ui.button(class=location_button_class) Work locally, remote okay
                        #inhouse.ui.button(class=location_button_class) In-house
                .field
                    label Field of Work
                    .ui.selection.dropdown
                        input(type='hidden', name='gender')
                        i.dropdown.icon
                        .default.text Field of Work
                        .menu
                            .item(data-value='0') n/a
                            .item(data-value='1') Accounting
                            .item(data-value='2') Advertising
                            .item(data-value='2') Branding & Identity
                            .item(data-value='2') Business Development
                .inline.field
                    label Would you like applicants to include any of the following?
                    .ui.basic.buttons
                        #quote.ui.button(class=inclusion_button_class) Quote
                        #estimated_timeline.ui.button(class=inclusion_button_class) Estimated timeline
                        #relevant.ui.button(class=inclusion_button_class) Relevant experience
                .field
                    .ui.header Tags
                    each tags
                        .ui.basic.button.event_tag
                            i.minus.icon
                            |#{this}
                    .ui.left.icon.input
                        i.add.icon
                        input#add_event_tag(type='text' autofocus='' placeholder='Add Tag' maxlength='50')
                if tags
                    #save_event.ui.large.green.button
                        i.check.icon
                        |Save
                #delete_event.ui.red.compact.button
                    i.remove.icon
                    |Delete
