template(name='edit_event')
    with event
        .ui.segment
            .ui.form
                .required.field
                    label Title
                    input#title(type='text' name='title' placeholder='Title' value=title)
                    .field
                        input(type='file' name='upload_image' accept='image/*')
                        .ui.button Upload CSV File
                        input(type='text' value=fileName)
                        p #{downloadUrl}
                .ui.segment    
                    .inline.field
                        label Type of event
                        .ui
                            if selected_type_of_event_tags
                                #clear_type_of_event_tags.ui.large.compact.primary.icon.button
                                    i.remove.icon
                                each selected_type_of_event_tags
                                    .ui.compact.large.primary.button.unselect_type_of_event_tag
                                        strong #{this}
                            each type_of_event_cloud 
                                .ui.compact.basic.button.select_type_of_event_tag #{name}
                    .inline.field
                        label Type w/Autocomplete
                        +inputAutocomplete settings=settings id="add_type_of_event_tag" class="" autocomplete="off" placeholder='Select/Type Type'
                .field
                    label Date and Time
                    input#datetimepicker(type='text' value=datetime)
                .field
                    label Description
                    textarea#description(rows='5') #{description}
                // .inline.field
                //     label Location
                        
                // .inline.field 
                //     label To Be Determinded  

                // .inline.field
                //     label Registration?

                .field
                    .ui.header Your Selected Tags
                    each tags
                        .ui.basic.button.event_tag
                            i.minus.icon
                            |#{this}
                    .ui.left.icon.input
                        i.add.icon
                        input#add_event_tag(type='text' autofocus='' placeholder='Add Tag' maxlength='50')
                if title
                    #save_event.ui.animated.large.green.button
                        .visible.content Save
                        .hidden.content
                            i.right.check.icon
                #delete_event.ui.animated.red.large.button
                        .hidden.content 
                            i.remove.icon
                        .visible.content Delete
                    
template(name="tag_result")
    .ui.label #{name}
    