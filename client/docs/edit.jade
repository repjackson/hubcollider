template(name='edit')
    with doc
        .ui.raised.very.padded.text.container.segment
            form#edit_doc_form.ui.form
                .required.field
                    label Title
                    input#title(type='text' placeholder='Add Title' value=title)
                .field
                    label Image
                    input#img_url(type='text' placeholder='Add image url' value=img_url)
                .field
                    label Tags
                    each hub_doc_tags
                        .ui.basic.button.docTag
                            i.minus.icon
                            |#{this}
                    .ui.left.icon.four.wide.input
                        i.add.icon
                        input#addTag(type='text' autofocus='' placeholder='Add Tag' maxlength='50')
                .inline.field
                    label Add Address
                    i.marker.icon
                    input#address(type='text' value=address)
                .field
                    label Description
                    textarea#body(maxlength='2000')
                        |#{body}
                .field
                    label Price
                    input#price(type='number' min='0' max='10000' value=price)
            .ui.hidden.divider
                if title
                    button(type='submit')#saveDoc.ui.large.green.basic.button
                        i.check.icon
                        |Save
                #delete.ui.red.small.compact.basic.button
                    i.remove.icon
                    |Delete
        .ui.modal.delete_modal
            .header Confirm Delete
            .content
                .meta Confirm?
            .actions
                .ui.button.cancel Cancel
                .ui.red.button.approve Delete
