template(name='big_card')
    .ui.fluid.card(class=doc_card_class)
        // .blurring.dimmable.fluid.image
        //     .ui.dimmer
        //         .content
        //             .center
        //                 .ui.inverted.icon.button.make_small
        //                     i.compress.icon
        img.ui.image(src=img_url)
        .content
            a.header.doc_title
                if is_in_academy
                    i.yellow.university.icon
                if is_in_economy
                    i.green.cart.icon
                |#{title}
        .content
            each hub_tags
                .ui.basic.large.label  #{this}
        if body
            .extra.content
                |#{body}
        .extra.content
            | by &nbsp;
            .ui.circular.button.select_author(class=select_author_button_class)
                i.user.icon
                |#{author.username}
            | &nbsp; #{when}
        if currentUser
            if isAuthor
                .extra.content
                    .ui.basic.compact.button.editDoc
                        i.blue.pencil.icon
                        |Edit
                // else
                //     .ui.basic.button
                //         i.bitcoin.icon
                //         | Tip
        .extra.content
            if price
                span.right.floated
                    .ui.mini.statistic
                        .value
                            i.dollar.icon
                            | #{price}
            a.left.floated.unlike
                i.empty.heart.large.icon
            .center.aligned
                i.thumbs.up.outline.large.icon
                i.thumbs.down.outline.large.icon
