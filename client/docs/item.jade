template(name='item')
    .ui.item
        if img_url
            // a.image.doc_title
            a.image.doc_title
                img.ui.image(src=img_url)
        .content
            each clipped_hub_tags
                .ui.compact.small.button.doc_tag(class=doc_tag_class)  #{this}
            // a.header.doc_title #{title}
            // .header #{title}
            .meta
                | by
                .ui.small.circular.button.select_author(class=select_author_button_class)
                    i.user.icon
                    |#{author.username}
                |#{when}
            .description
                |#{body}
            // .extra.content
            //     a.view_comments Comment Count: #{comment_count}
            .extra
                if currentUser
                    if isAuthor
                        .ui.basic.compact.button.editDoc
                            i.blue.pencil.icon
                            |Edit
                // if price
                //     span.right.floated
                //         .ui.mini.statistic
                //             .value
                //                 i.dollar.icon
                //                 | #{price}
                // .ui.circular.icon.basic.button.like(class=like_button_class)
                //     i.empty.heart.icon
                // .ui.buttons
                .ui.icon.button.vote_up(class=vote_up_button_class)
                    i.thumbs.up.outline.icon
                .ui.icon.button.vote_down(class=vote_down_button_class)
                    i.thumbs.down.outline.icon
                .ui.basic.label #{points}
