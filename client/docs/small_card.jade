template(name='small_card')
    .ui.card(class=doc_card_class)
        if img_url
            .blurring.dimmable.image
                .ui.dimmer
                    .content
                        .center
                            .ui.inverted.icon.button.make_big
                                i.expand.icon
                img.ui.image(src=img_url)
        .content
            a.header.make_big
                if is_in_academy
                    i.yellow.university.icon
                if is_in_economy
                    i.green.cart.icon
                |#{title}
        .content
            each hub_tags
                .ui.compact.button.doc_tag(class=doc_tag_class)  #{this}
        .extra.content
            | by &nbsp;
            .ui.circular.button.select_author(class=select_author_button_class)
                i.user.icon
                |#{author.username}
            | &nbsp; #{when}
        .extra.content
            if currentUser
                if isAuthor
                    .ui.basic.compact.button.editDoc
                        i.blue.pencil.icon
                        |Edit
                // else
                //     .ui.basic.button
                //         i.bitcoin.icon
                //         | Tip
        .extra.content
            if price
                span.right.floated
                    .ui.mini.statistic
                        .value
                            i.dollar.icon
                            | #{price}
            a.left.floated.unlike
                i.empty.heart.large.icon
            .center.aligned
                i.thumbs.up.outline.large.icon
                i.thumbs.down.outline.large.icon
        .ui.modal(class=this._id)
            .content
                +big_card
