template(name='docs')
    +cloud
    .ui.container
        // .ui.center.aligned.header Top Doc:
        .ui.centered.cards
            each docs
                +view_card

template(name='view_card')
    .ui.card(class=doc_card_class)
        .image
            img.ui.image(src=img_url)
        .content
            a.header.doc_title
                if is_in_academy
                    i.yellow.university.icon
                if is_in_economy
                    i.green.cart.icon
                |#{title}
        .content
            each hub_tags
                .ui.compact.button.doc_tag(class=doc_tag_class)  #{this}
        .content
            .description
                #{body}
        .extra.content
            span by #{author.username} #{when}
            if currentUser
                if isAuthor
                    .ui.basic.compact.button.editDoc
                        i.blue.pencil.icon
                        |Edit
                else
                    .ui.basic.button
                        i.bitcoin.icon
                        | Tip
        .extra.content
            if liked
                a.left.floated.unlike
                    i.heart.icon
                    strong Liked
            else
                a.left.floated.like
                    i.empty.heart.icon
                    | Like
            if price
                span.right.floated.star
                    i.dollar.icon
                    | #{price}
