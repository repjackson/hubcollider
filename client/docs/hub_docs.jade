template(name='docs')
    +cloud
    .ui.container
        // .ui.center.aligned.header Top Doc:
        .ui.cards
            each docs
                +view

template(name='view')
    .ui.fluid.card
        .content
            .header
                each hub_tags
                    .ui.compact.button.doc_tag(class=doc_tag_class)  #{this}
            .description
                +markdown
                    !{body}
        .extra.content
            span by #{author.username} #{when}
            if currentUser
                if isAuthor
                    .ui.basic.compact.button.editDoc
                        i.blue.pencil.icon
                        |Edit
                else
                    .ui.basic.button
                        i.bitcoin.icon
                        | Tip